.container {
  display: flex;
  flex-direction: column;
  padding: 0rpx;
}

.toptitle {
  font-size: 40rpx;
  color: #494949;
  margin-bottom: 20rpx;
}

.topitem {
  display: flex;
  flex-direction: row;
  padding: 10rpx;
  border-top: 1rpx dashed rgb(187, 187, 187);
  border-bottom: 1rpx dashed rgb(187, 187, 187);
  width: 700rpx;
}

.topitemindex {
  color: #bbb;
  margin-left: 30rpx;
}

.topitemimage {
  z-index: 2;
  width: 150rpx;
  height: 220rpx;
  border-radius: 8rpx;
  box-shadow: 0 30rpx 150rpx rgba(255, 255, 255, 0.3);
  padding: 5rpx 50rpx;
  margin-left: 10rpx;
}

.topitemright {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.topitemrighttitle {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  color: rgb(63, 63, 139);
}

.topitemrightaverage {
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
}

.endline {
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: rgb(80, 80, 80);
}
