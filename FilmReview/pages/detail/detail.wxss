/* 电影简介部分 */
.container {
  margin-top: 0rpx;
  padding:0rpx;
}
.filmdesc {
  width: 100%;
  height: 600rpx;
  display: flex;
  justify-content: center;
  align-content: center;
}

.filmdesc:before {
  content: '';
  display: block;
  position: absolute;
  z-index: 1;
  width: 100%;
  height: 600rpx;
  background-color: rgba(0, 0, 0, 0.6);
}

.filmdescbackgrond {
  position: absolute;
  z-index: 0;
  width: 100%;
  height: 600rpx;
  background-size: cover;
  background-position: center;
  filter: blur(30rpx);
}

.filmdesccover {
  z-index: 2;
  width: 300rpx;
  height: 420rpx;
  margin-top: 80rpx;
  border-radius: 8rpx;
  box-shadow: 0 30rpx 150rpx rgba(255, 255, 255, 0.3);
}

.filmdescintro {
  z-index: 2;
  width: 320rpx;
  margin-top: 80rpx;
  margin-left: 40rpx;
  color: #fff;
}

.filmdescintrotitle {
  margin-bottom: 30rpx;
  font-size: 42rpx;
}

.filmdescintrotxt {
  margin-bottom: 18rpx;
  color: #eee;
}

.filmtotalnum {
  display: flex;
  flex-direction: row;
  height: 150rpx;
  justify-content: space-around;
  align-items: center;
  width: 100%;
  margin-top: 20rpx;
}

.filmeachnum {
  width: 33.33%;
  text-align: center;
  border: 1px solid #eee;
}

.filmnum {
  font-size: 40rpx;
  font-weight: 100;
  color: #444;
}

.filmnumtitle {
  font-size: 20rpx;
  font-weight: 80;
  color: #444;
}

.filmperson {
  padding: 0 40rpx 40rpx;
}

.filmpersontitle {
  padding-left: 20rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #444;
  border-left: 10rpx solid #47a86c;
}

.filmpersonintro {
  text-align: justify;
  color: #666;
}

.filmeachperson {
  display: flex;
  flex-direction: row;
  width: 700rpx;
  height: 100%;
}

.filmpersondirector {
  margin-left: 20rpx;
  text-align: center;
  display: inline-block;
}

.filmpersonactor {
  margin-left: 20rpx;
  text-align: center;
  height: 500rpx;
  display: inline-block;
}

.filmpersonactor:first-child {
  margin-left: 0;
}

.filmtagtitle {
  padding-left: 20rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #444;
  border-left: 10rpx solid #47a86c;
}

.filmtag {
  display: flex;
}

.filmtagitem {
  padding: 5rpx 10rpx;
  margin-right: 15rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  color: #666;
}

.filmcommenttitle {
  padding: 5rpx 10rpx;
  margin-right: 15rpx;
  border: 1px solid #ccc;
  border-radius: 10rpx;
  color: #666;
}

.comments {
  display: flex;
  flex-direction: column;
}

.comment {
  padding: 10px;
  border-bottom: 1px solid #e9e9e9;
}
