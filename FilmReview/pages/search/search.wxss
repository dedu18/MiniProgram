.container {
  width: 100%;
  height: 140rpx;
  margin-top: 0rpx;
  padding: 0rpx;
  background-color: #fff;
  border-bottom: 1px solid #f8f8f8;
}

.searchtxt {
  box-sizing: border-box;
  width: 500rpx;
  height: 70rpx;
  border-radius: 10rpx;
  border: 1px solid #eee;
  font-family: "微软雅黑";
}

.searchhottitle {
  padding-left: 20rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  font-size: 30rpx;
  border-left: 10rpx solid #47a86c;
}

.searchhotitem {
  display: inline-block;
  padding: 10rpx;
  border: 1px solid #ccc;
  border-radius: 15rpx;
  background-color: #fbfbfb;
  margin: 0 10rpx 10rpx 0;
  color: #555;
}
